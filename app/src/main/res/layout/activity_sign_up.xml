<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_view_page"
        android:gravity="center"
        android:id="@+id/main"
        android:orientation="vertical"
        tools:context=".SignUp">

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="350dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:text="SignUp"
                android:textSize="30dp"
                android:textStyle="bold|italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:layout_width="280dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/edit_text"
                    android:hint="USERNAME"
                    android:id="@+id/signUpname"
                    android:inputType="text"
                    android:textColor="@color/black" />

                <EditText
                    android:layout_width="280dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit_text"
                    android:hint="NEW PASSWORD"
                    android:id="@+id/signUpnPass"
                    android:inputType="textPassword"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:id="@+id/forRed"
                    android:layout_marginLeft="10dp"
                    android:text="Minimum password 10 character"
                    android:textSize="12dp" />
                <EditText
                    android:layout_width="280dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit_text"
                    android:hint="PASSWORD"
                    android:id="@+id/signUpPass"
                    android:inputType="textPassword"
                    android:textColor="@color/black" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:id="@+id/forRed2"
                    android:layout_marginLeft="10dp"
                    android:textSize="12dp" />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:background="@drawable/custom_btn"
                    android:layout_marginTop="10dp"
                    android:id="@+id/signUpC"
                    android:text="SignUp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center|left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="8dp"
                    android:text="Have any account?" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="  Log in"
                    android:id="@+id/logIn"
                    android:textColor="#2196F3" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>