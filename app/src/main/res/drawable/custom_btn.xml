<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#FF5733"
                android:endColor="#FF8D72"
                android:angle="270" />
            <corners android:radius="30dp" />
            <solid android:color="#FF5733" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#FF8D72"
                android:endColor="#FF5733"
                android:angle="270" />
            <corners android:radius="30dp" />
            <solid android:color="#FF8D72" />
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp" />
            <stroke
                android:width="3dp"
                android:color="#FF4500" />
            <shadow
                android:color="#FF4500"
                android:radius="5dp" />
        </shape>
    </item>
</selector>
