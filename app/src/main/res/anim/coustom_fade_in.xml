<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 3D flip effect from the right -->
    <rotate
        android:fromDegrees="90"
        android:toDegrees="0"
        android:duration="800"
        android:pivotX="100%"
        android:pivotY="50%" />

    <alpha
        android:fromAlpha="0.0"
        android:toAlpha="1.0"
        android:duration="800" />
</set>
