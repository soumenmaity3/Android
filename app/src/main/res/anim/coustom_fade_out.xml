<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 3D flip effect to the left -->
    <rotate
        android:fromDegrees="0"
        android:toDegrees="-90"
        android:duration="800"
        android:pivotX="0%"
        android:pivotY="50%" />

    <alpha
        android:fromAlpha="1.0"
        android:toAlpha="0.0"
        android:duration="800" />
</set>
